@model CloudClaims.Data.CCClientANDCCGenericContactCard

@{
    ViewBag.Title = "Manage Client";
}


@{Html.RenderPartial("TopNav");}
<!-- Start Main Wrapper -->
<div id="mws-wrapper">
    @{Html.RenderPartial("LeftNav");}
    <!-- Main Container Start -->
    <div id="mws-container" class="clearfix hidden-wrapper">
        <!-- Inner Container Start -->
        <div class="container">
            <!-- Panels Start -->
            <div class="mws-panel grid_8 mws-collapsible">
                @using (Html.BeginForm("UpdateClient", "Home", FormMethod.Post, new { @class = "mws-form", @id = "mws-validate" })) {
                    if (!this.ViewData.ModelState.IsValid) {
                    <div id="mws-validate-error" class="mws-form-message error" style="display: block;">
                        @Html.ValidationSummary()
                    </div>
                    }
                    @Html.HiddenFor(model => model.client.clientID)
                    @Html.HiddenFor(model => model.client.clientGUID)
                    @Html.HiddenFor(model => model.client.clientGenericContactCardID)
                    @Html.HiddenFor(model => model.client.clientGroup)
                    
                    <div id="mws-validate-success" class="mws-form-message success" style="display: none;">
                    </div>
                    <div class="mws-accordion">
                        <h3>
                            <a href="#">Core Info</a></h3>
                        <div>
                            <div class="mws-form-block">
                                <div class="mws-form-row">
                                    @Html.LabelFor(model => model.client.clientName)
                                    <div class="mws-form-item small">
                                        @Html.TextBoxFor(model => model.client.clientName, new { @class = "mws-textinput", @autofocus = "autofocus" })
                                        @Html.ValidationMessageFor(model => model.client.clientName)
                                    </div>
                                </div>
                                <div class="mws-form-row">
                                    @Html.LabelFor(model => model.client.clientTaxID)
                                    <div class="mws-form-item small">
                                        @Html.TextBoxFor(model => model.client.clientTaxID, new { @class = "mws-textinput" })
                                        @Html.ValidationMessageFor(model => model.client.clientTaxID)
                                    </div>
                                </div>
                                <div class="mws-form-row">
                                    @Html.LabelFor(model => model.client.clientTimeZone)
                                    <div class="mws-form-item small">
                                        @Html.EditorFor(model => model.client.clientTimeZone)
                                        @Html.ValidationMessageFor(model => model.client.clientTimeZone)
                                    </div>
                                </div>
                                <div class="mws-form-row">
                                    @Html.LabelFor(model => model.client.clientNotes)
                                    <div class="mws-form-item large">
                                        @Html.TextAreaFor(model => model.client.clientNotes)
                                        @Html.ValidationMessageFor(model => model.client.clientNotes)
                                    </div>
                                </div>
                                <div class="mws-form-row">
                                    @Html.LabelFor(model => model.client.clientDomainName)
                                    <div class="mws-form-item small">
                                        @Html.TextBoxFor(model => model.client.clientDomainName, new { @class = "mws-textinput" })
                                        @Html.ValidationMessageFor(model => model.client.clientDomainName)
                                    </div>
                                </div>
                                <div class="mws-button-row">
                                    <input type="submit" value="Save" class="mws-button green" />
                                </div>
                            </div>


                        </div>
                        <h3>
                            <a href="#">Contact Info</a></h3>
                        <div>
                            <div class="mws-form-block">
                                @Html.Partial("GenericContactCard", Model.contactCard, new ViewDataDictionary(Html.ViewDataContainer.ViewData) { TemplateInfo = new System.Web.Mvc.TemplateInfo { HtmlFieldPrefix = "contactCard" } })
                                <div class="mws-button-row">
                                    <input type="submit" value="Save" class="mws-button green" />
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <!-- Panels End -->
        </div>
        <!-- Inner Container End -->
    </div>
    <!-- Main Container End -->
</div>
<script type="text/javascript">
    $('.mws-accordion').accordion({
        //heightStyle: 'content',
        active: false,
        collapsible: true,
        autoHeight: false
    });
</script>

@Scripts.Render("~/bundles/jqueryval")
