@model IEnumerable<CloudClaims.Model.CCSetting_ClaimDropdownTypes>

<!-- Main content wrapper -->
<div class="">
    <!-- Dynamic table -->
    <div class="widget">
        <div class="title">
            <img src="~/Content/crwn/images/icons/dark/users.png" alt="" class="titleIcon" />
        </div>
        <table cellpadding="0" cellspacing="0" border="0" class="display dTable">
            <thead>
                <tr>
                    <th>Dropdown Type</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model) {
                    <tr>
                        <td id="dropdownTypeID-@p.dropdownTypeID" class="gradeA draggable-custom-form-item draggable-claim-dropdown cursor-pointer">@p.dropdownName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    var dropdownObject = {
        dropdownTypeID: '',
        dropdownType: '',
    };

    $(function () {
        $(".draggable-claim-dropdown").draggable({
            //revert: "valid",
            revert: true,
            opacity: 0.7,
            helper: "clone",
            //containment: "#rightSide",
            scroll: false,
            cursor: "move",
            cursorAt: { top: 5, left: 5 },
            start: function (event, ui) {
                GLOBAL_DRAGGED_ITEM_TYPE.id = $(this).attr('id').replace('dropdownTypeID-', '');
                GLOBAL_DRAGGED_ITEM_TYPE.type = 'dropdown';
                GLOBAL_DRAGGED_ITEM_TYPE.name = $(this).html();
                //console.log('Setting GLOBAL_DRAGGED_ITEM_TYPE to: ' + GLOBAL_DRAGGED_ITEM_TYPE.type);
                dropdownObject.dropdownTypeID = $(this).attr('id').replace('dropdownTypeID-', '');
                dropdownObject.dropdownType = $(this).html();
            }
        });
    });
</script>