@model IEnumerable<CloudClaims.Model.CCClaimDateType>

<!-- Main content wrapper -->
<div class="">
    <!-- Dynamic table -->
    <div class="widget">
        <div class="title">
            <img src="~/Content/crwn/images/icons/dark/users.png" alt="" class="titleIcon" />
        </div>
        <table cellpadding="0" cellspacing="0" border="0" class="display dTable">
            <thead>
                <tr>
                    <th>Date Field Type</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model) {
                    <tr>
                        <td id="dateTypeID-@p.claimDateTypeID" class="gradeA draggable-custom-form-item draggable-claim-date cursor-pointer">@p.claimDateType</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    var claimDateObject = {
        dateTypeID: '',
        dateType: '',
    };

    $(function () {
        $(".draggable-claim-date").draggable({
            //revert: "valid",
            revert: true,
            opacity: 0.7,
            helper: "clone",
            //containment: "#rightSide",
            scroll: false,
            cursor: "move",
            cursorAt: { top: 5, left: 5 },
            start: function (event, ui) {
                GLOBAL_DRAGGED_ITEM_TYPE.id = $(this).attr('id').replace('dateTypeID-', '');
                GLOBAL_DRAGGED_ITEM_TYPE.type = 'datefield';
                GLOBAL_DRAGGED_ITEM_TYPE.name = $(this).html();                
                //console.log('Setting GLOBAL_DRAGGED_ITEM_TYPE to: ' + GLOBAL_DRAGGED_ITEM_TYPE.type);
                claimDateObject.dateTypeID = $(this).attr('id').replace('dateTypeID-', '');
                claimDateObject.dateType = $(this).html();
            }
        });
    });
</script>